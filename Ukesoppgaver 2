    <script type="text/javascript">
        let persReg = [];
        const person1 = {
            navn: "Line Jensen",
            adresse: "Askerveien 82",
            telefonnr: "12334455",
            persnr: "22029530201"
        };
        const person2 = {
            navn: "Ole Hansen",
            adresse: "Osloveien 82",
            telefonnr: "99887766",
            persnr: "12129911111"
        };
        const person3 = {
            navn: "Oda Eide",
            adresse: "Kinogata 33",
            telefonnr: "26328271",
            persnr: "11119113678"
        };
        const person4 = {
            navn: "Arne Pedersen",
            adresse: "Sollien 50",
            telefonnr: "12345678",
            persnr: "06069613745"
        };
        const person5 = {
            navn: "Tom Padum",
            adresse: "Fana 393",
            telefonnr: "19283746",
            persnr: "04050134567"
        };
        const person6 = {
            navn: "Tuva Pine",
            adresse: "Mysen 39",
            telefonnr: "11445366",
            persnr: "05060239821"
        };
        const person7 = {
            navn: "Bjørn Sjuk",
            adresse: "Veien 129",
            telefonnr: "84720483",
            persnr: "13098824312"
        };
        const person8 = {
            navn: "Silje Sild",
            adresse: "Kokos 154",
            telefonnr: "99664422",
            persnr: "29119920256"
        };
        persReg[0] = person1;
        persReg.push(person2);
        persReg.push(person3);
        persReg.push(person4);
        persReg.push(person5);
        persReg.push(person6);
        persReg.push(person7);
        persReg.push(person8);

        function visPersonRegister() {
            persReg.sort(function(a, b) {
                let navnA = a.navn.toUpperCase();
                let navnB = b.navn.toUpperCase();
                if (navnA < navnB) {
                    return -1;
                }
                if (navnA > navnB) {
                    return 1;
                }
                return 0;
            });
            let sortert = "";
            for (i=0; i<persReg.length; i++) {
                let c = Math.floor(persReg[i].persnr / 100 % 10);
                let kjonn = (c%2===0) ? "Kvinne":"Mann";
                let str = (c%2===0) ? "<strong>":"";
                let istr = (c%2===0) ? "</strong>":"";
                sortert += "<tr><td>" + str + persReg[i].navn + istr + "</td>" +
                    "<td>" + str + persReg[i].adresse + istr + "</td>" +
                    "<td>" + str + persReg[i].telefonnr + istr + "</td>" +
                    "<td>" + str + persReg[i].persnr + istr + "</td>" +
                    "<td>" + str + kjonn + istr + "</td>";
            }
            let utSListe = "<table><tr>" +
                "<th>Navn</th><th>Adresse</th><th>Telefonnr</th><th>Persnr</th><th>Kjønn</th><tr/>" +
                sortert + "<table/>";
            document.write(utSListe);
        }
    </script>
